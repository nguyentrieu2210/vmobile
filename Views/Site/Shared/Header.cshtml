
@using Microsoft.AspNetCore.Http;
@using vphone.Helper;
@using vphone.Models;
@{
    var cart = Context.Request.HttpContext.Session.Get<Cart>("Cart") ?? new Cart();
    int totalItem = cart.Items.Sum(item => item.Qty);
}
<!--	Header	-->
<div id="header" style="background: #222222">
    <div class="container">
        <div class="row">
            <div id="logo" class="col-lg-3 col-md-3 col-sm-12">
                <h1 ><a href="/"><span class="style-logo">V MOBILE</span></a></h1>
            </div>
            <div id="search" class="col-lg-6 col-md-6 col-sm-12">
                <form class="form-inline" method="post" action="/search">
                    <input name="keyword" class="form-control mt-3" type="search" placeholder="Tìm kiếm" aria-label="Search">
                    <button class="btn btn-danger mt-3" type="submit">Tìm kiếm</button>
                </form>
            </div>
            <div id="cart" class="col-lg-3 col-md-3 col-sm-12">
                <a class="mt-4 mr-2" href="/cart">giỏ hàng</a><span class="mt-3">@totalItem</span>
            </div>
        </div>
    </div>
    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#menu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>
<!--	End Header	-->